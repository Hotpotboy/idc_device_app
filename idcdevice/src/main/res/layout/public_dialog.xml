<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_stroke_trans_solid_ten_corner_button_bg"
    android:paddingBottom="@dimen/twenty_dp"
    android:paddingTop="@dimen/twenty_dp">

    <FrameLayout
        android:id="@+id/public_dialog_context_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifty_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="确定退出?"
            android:textColor="@color/idc_000000"
            android:textSize="@dimen/thirty_sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/public_dialog_context_layout"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/public_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_weight="2"
            android:background="@drawable/button_circle_bg"
            android:text="确定"
            android:textColor="@color/idc_ffffff"
            android:textSize="@dimen/thirty_sp" />

        <View
            android:id="@+id/public_dialog_button_splite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/public_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_weight="2"
            android:background="@drawable/button_circle_bg"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingRight="@dimen/twenty_dp"
            android:text="取消"
            android:textColor="@color/idc_ffffff"
            android:textSize="@dimen/thirty_sp" />
    </LinearLayout>
</RelativeLayout>