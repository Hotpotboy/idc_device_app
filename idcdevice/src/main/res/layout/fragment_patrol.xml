<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_patrol_title"
        layout="@layout/public_title" />

    <LinearLayout
        android:id="@+id/fragment_patrol_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_patrol_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fifteen_dp"
            android:paddingLeft="@dimen/fifty_dp"
            android:paddingRight="@dimen/fifty_dp"
            android:paddingTop="@dimen/fifteen_dp">

            <TextView
                android:id="@+id/fragment_patrol_deviceID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/she_bei_bian_hao_s"
                android:textColor="@color/idc_999999"
                android:textSize="@dimen/thirty_sp" />

            <TextView
                android:id="@+id/fragment_patrol_taskName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ren_wu_ming_cheng_s"
                android:textColor="@color/idc_999999"
                android:textSize="@dimen/thirty_sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_point_five_dp"
            android:background="@color/idc_e2e2e2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fifteen_dp"
            android:paddingLeft="@dimen/fifty_dp"
            android:paddingRight="@dimen/fifty_dp"
            android:paddingTop="@dimen/fifteen_dp">

            <TextView
                android:id="@+id/fragment_patrol_dealPeople"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/shi_shi_yuan_gong_s"
                android:textColor="@color/idc_999999"
                android:textSize="@dimen/thirty_sp" />

            <TextView
                android:id="@+id/fragment_patrol_startTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kai_shi_shi_jian_s"
                android:textColor="@color/idc_999999"
                android:textSize="@dimen/thirty_sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_point_five_dp"
            android:background="@color/idc_e2e2e2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ten_dp"
            android:background="@color/idc_f5f5f5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_point_five_dp"
            android:background="@color/idc_e2e2e2" />

        <com.zhanghang.idcdevice.view.PatrolItemProgress
            android:id="@+id/fragment_patrol_dealProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_point_five_dp"
            android:background="@color/idc_e2e2e2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ten_dp"
            android:background="@color/idc_f5f5f5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_point_five_dp"
            android:background="@color/idc_e2e2e2" />

        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_patrol_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
