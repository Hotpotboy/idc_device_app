<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/public_patrol_patrolItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifty_dp"
        android:paddingRight="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:singleLine="true"
        android:text="@string/xun_jian_ming_cheng_s"
        android:textColor="@color/idc_999999"
        android:textSize="@dimen/twenty_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/idc_e2e2e2" />

    <TextView
        android:id="@+id/public_patrol_patrolStudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifty_dp"
        android:paddingRight="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:singleLine="true"
        android:text="@string/xun_jian_zhi_biao_s"
        android:textColor="@color/idc_999999"
        android:textSize="@dimen/twenty_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/idc_e2e2e2" />

    <TextView
        android:id="@+id/public_patrol_patrolStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifty_dp"
        android:paddingRight="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:singleLine="true"
        android:text="@string/xun_jian_cuo_shi_s"
        android:textColor="@color/idc_999999"
        android:textSize="@dimen/twenty_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/idc_e2e2e2" />

    <TextView
        android:id="@+id/public_patrol_patrolDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifty_dp"
        android:paddingRight="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:singleLine="true"
        android:text="@string/xun_jian_xiang_qing_s"
        android:textColor="@color/idc_999999"
        android:textSize="@dimen/twenty_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/idc_e2e2e2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifty_dp"
        android:paddingRight="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifteen_dp">

        <TextView
            android:id="@+id/patrol_item_normal_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="是否正常"
            android:layout_centerVertical="true"
            android:textColor="@color/idc_999999"
            android:textSize="@dimen/twenty_sp" />


        <LinearLayout
            android:layout_toRightOf="@id/patrol_item_normal_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@drawable/red_stroke_trans_solid_ten_corner_button_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/public_patrol_nomal"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_red_solid_ten_left_corner_check_bg"
                android:gravity="center_horizontal"
                android:padding="@dimen/fifteen_dp"
                android:text="是"
                android:textColor="@color/idc_f5f5f5"
                android:textSize="@dimen/twenty_dp" />

            <TextView
                android:id="@+id/public_patrol_unnomal"
                android:layout_width="0dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="1"
                android:background="@drawable/red_stroke_red_solid_ten_right_corner_check_bg"
                android:gravity="center_horizontal"
                android:padding="@dimen/fifteen_dp"
                android:text="否"
                android:textColor="@color/idc_af0012"
                android:textSize="@dimen/twenty_sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/idc_e2e2e2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifty_dp"
        android:paddingRight="@dimen/fifty_dp"
        android:paddingTop="@dimen/fifteen_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="巡检记录"
            android:textColor="@color/idc_999999"
            android:textSize="@dimen/twenty_sp" />


        <EditText
            android:id="@+id/public_patrol_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_dp"
            android:background="@drawable/red_stroke_trans_solid_ten_corner_button_bg"
            android:hint="填写记录"
            android:layout_marginLeft="@dimen/ten_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:textColorHint="@color/idc_999999"
            android:textSize="@dimen/twenty_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:background="@color/idc_e2e2e2" />
</LinearLayout>