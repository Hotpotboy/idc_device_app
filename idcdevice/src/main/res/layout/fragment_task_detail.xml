<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_task_detail_title"
        layout="@layout/public_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_task_detail_title"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/fragment_task_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:background="@color/idc_f5f5f5"
                android:text="巡检详情信息"
                android:paddingLeft="@dimen/twenty_dp"
                android:textSize="@dimen/thirty_sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:id="@+id/fragment_task_detail_patrolsInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fifty_dp"
                android:layout_marginLeft="@dimen/fifty_dp"
                android:orientation="vertical"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:background="@color/idc_f5f5f5"
                android:text="任务详述"
                android:paddingLeft="@dimen/twenty_dp"
                android:textSize="@dimen/thirty_sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />
            <TextView
                android:id="@+id/fragment_task_detail_taskDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/thirty_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:background="@color/idc_f5f5f5"
                android:text="任务基本信息"
                android:paddingLeft="@dimen/twenty_dp"
                android:textSize="@dimen/thirty_sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_deviceID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/she_bei_bian_hao_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/fragment_task_detail_taskName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ren_wu_ming_cheng_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_dealPeople"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shi_shi_yuan_gong_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/fragment_task_detail_dealGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shi_shi_zu_bie_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_dealInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chu_li_xin_xi_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/fragment_task_detail_dealResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chu_li_jie_guo_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_planStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ji_hua_kai_shi_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/fragment_task_detail_planEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ji_hua_jie_su_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_startTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shi_ji_kai_shi_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
                <TextView
                    android:id="@+id/fragment_task_detail_endTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shi_ji_jie_su_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_responsePeople"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fu_ze_ren_yuan_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/fragment_task_detail_responseGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fu_ze_zu_bie_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero_point_five_dp"
                android:background="@color/idc_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/fifteen_dp"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:paddingTop="@dimen/fifteen_dp">

                <TextView
                    android:id="@+id/fragment_task_detail_taskState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ren_wu_zhuang_tai_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/fragment_task_detail_taskType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ren_wu_lei_bie_s"
                    android:textColor="@color/idc_999999"
                    android:textSize="@dimen/thirty_sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
