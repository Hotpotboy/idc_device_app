<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/twenty_dp"
    android:paddingLeft="@dimen/fifty_dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_device_num_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/device_icon" />


    <Button
        android:id="@+id/item_device_num_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_selector"
        android:padding="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:text="删除设备"
        android:textColor="@color/idc_f5e9e9"
        android:textSize="@dimen/twenty_sp" />

    <Button
        android:id="@+id/item_device_num_lastInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_device_num_delete"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_selector"
        android:padding="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:text="@string/shang_ci_xin_xi"
        android:textColor="@color/idc_f5e9e9"
        android:textSize="@dimen/twenty_sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_device_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_device_num_image"
        android:layout_toLeftOf="@id/item_device_num_lastInfo"
        android:paddingLeft="@dimen/twenty_dp"
        android:paddingRight="@dimen/twenty_dp"
        android:text="@string/she_bei_bian_hao_s"
        android:textColor="@color/idc_3b3b3b"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/fourty_sp"
        />

    <View
        android:id="@+id/item_device_spiles"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_point_five_dp"
        android:layout_alignParentBottom="true"
        android:background="@color/idc_c4c4c4" />

</RelativeLayout>